{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "typeRoots": [
      "./types"
    ],
    "strictPropertyInitialization":false
  },
  "include": [
    "./**/*.ts"
  ],
  "compileOnSave": false
}
